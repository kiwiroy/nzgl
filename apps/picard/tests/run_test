#!/bin/bash
set -e

picard_dir='/usr/share/java/picard'


function cleanup() {
	for file in Asperg.sam new.sam; do
		[ -e ${file} ] && rm -f ${file}
	done
	return 0
}

cleanup
java -jar ${picard_dir}/CreateSequenceDictionary.jar OUTPUT=Asperg.sam R=Asperg.fasta
java -jar ${picard_dir}/SortSam.jar INPUT=Asperg.sam OUTPUT=new.sam SORT_ORDER=unsorted
cleanup
